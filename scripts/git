#!/usr/bin/env bash
# set -e

dirs=( "indy-common" "indy-client" "indy-node" "plenum" "anoncreds" "ledger" )

# quiet pushd
pushd() {
  command pushd "$@" > /dev/null
}

# quiet popd
popd() {
  command popd "$@" > /dev/null
}

for dir in "${dirs[@]}"
do
  pushd ../$dir
  echo '----------' 'RUNNING' $1 'ON' $(pwd) '----------'
  git "$@"
  popd
done
