#!groovy

@Library('SovrinHelpers@v2.1.1') _

String name = 'indy-node'
String pkgName = name

Boolean isNightly = env.INDY_NODE_BUILD_MODE == 'nightly'
Map nightlySettings = [
    releaseVersion: null,
    sha1: null
]

